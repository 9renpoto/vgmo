---
import Footer from "@vgmo/ui/src/Footer";
import Header from "@vgmo/ui/src/Header";
import "../styles/tailwind.css";
import { Analytics } from "@vercel/analytics/react";
import {
  GoogleAnalytics,
  GoogleAnalyticsNoscript,
} from "@digi4care/astro-google-analytics";

interface Props {
  title: string;
}

const { title } = Astro.props;
const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;

const menus = [
  {
    title: "Links",
    children: [
      {
        name: "このサイトについて",
        href: "/about",
      },
      {
        name: "お問い合わせ",
        href: "https://github.com/9renpoto/vgmo/issues",
      },
    ],
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="VGM-Orchestra はビデオゲーム音楽専門のオーケストラです。"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="vgmo"
      href="/rss.xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
    {gaId && <GoogleAnalytics id={gaId} />}
    <Analytics client:only="react" />
  </head>
  <body class="bg-gray-100 flex flex-col min-h-screen">
    {gaId && <GoogleAnalyticsNoscript id={gaId} />}
    <Header active="Home" />
    <div class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <main class="py-6">
        <slot />
      </main>
    </div>
    <footer class="w-full">
      <Footer menus={menus} />
    </footer>
  </body>
</html>
